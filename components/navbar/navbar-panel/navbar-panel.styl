@import '~stylus/colors'

div#navbar-panel
  display:flex
  flex-direction: column
  padding: 0 25px
  width: 100%
  height: 0
  background-color: root-1
  transition: height .275s ease-out
  
  &.is-active
    padding-top: 10px
    height:100vh
    border-bottom: 1px solid border

  &.is-active > .link
    text-decoration: none
    color: primary-text
    cursor:pointer
    animation: landing-sticky-panel-link-fade-in .625s ease-out

    & > h1.title
      font-size: 30px
      font-weight: 600
      color: primary-text
      margin:15px 0
      cursor: pointer
      transition: padding-left .2s ease-out

    & > h3.detail
      font-size: 20px
      color: secondary-text
      margin:0
      padding-left: 15px
      font-weight: normal
      cursor: pointer
      margin-block-start: 0.75em
      margin-block-end: 0.75em
      transition: color .2s ease-out, padding-left .2s ease-out

    &:hover > h3.detail,
    &:focus > h3.detail,
    &:hover > h1.title,
    &:focus > h1.title
        color: primary-text
        padding-left: 25px


@keyframes landing-sticky-panel-link-fade-in
  0% 
    opacity: 0 
  35% 
    opacity: 0 
    margin-left: 25px 
  100% 
    opacity: 1 