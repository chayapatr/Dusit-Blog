@import '~stylus/colors'
@import '~stylus/fonts'

div#card-area
	display: flex
	flex-direction: column
	justify-content: flex-start
	align-items: center
	width:100%

div#priority-card, div#card
	display: flex
	flex-direction: column
	justify-content: center
	align-items: flex-start
	margin: 0
	padding: 0
	width:100%

	& > a.link
		text-decoration: none
		color:secondary-text

article.card
	display:flex
	flex-direction: column
	justify-content: flex-start
	align-items: center
	width:100%
	padding: 0 10px
	position: relative
	text-decoration: none

	& > figure.cover
		display: block
		width:100%
		height:300px
		margin 20px auto
		background-color: preload

		& > .image-data
			width inherit
			height inherit
			object-fit: cover
			object-position: center

	& > h5.title
		display: block
		font-size: 28px
		color: primary-text
		margin:10px 0 0 0
		font-weight: bold
		font-family: title-font
		text-decoration: none

	& > p.detail
		display: block
		width 100%
		margin: 10px 0
		padding: 0
		font-size: 18px
		color: secondary-text
		font-family: detail-font
		line-height: 1.75em
		text-decoration: none

div.tag-container
	display:block
	width:100%
	margin: 10px 0 10px 0

	& > a.tag:first-child
		margin-left:0

	& > a.tag
		display:inline-block
		font-size: 16px
		color: primary-text
		margin:5px 10px
		padding:3px 8px
		text-decoration: none
		background-color: rgba(0,0,0,.0425)
		border-radius: 3px
		transition: color .2s ease-out, background-color .2s ease-out

@media screen and (min-width: 960px)
	div#priority-card, div#card
		display:flex
		width:unset
		flex:1
  
  	article.card
		& > img.cover
			height: 400px