div#landing-sticky-navbar-panel {
  display:flex;
  flex-direction: column;
  padding: 0 25px;
  width: 100%;
  height: 0;
  background-color: var(--root-1);
  transition: height .275s ease-out;
}

div#landing-sticky-navbar-panel.is-active {
  padding-top: 10px;
  height:100vh;
  border-bottom: 1px solid var(--border);
}

a.landing-sticky-navbar-panel-link {
  text-decoration: none;
  color: var(--primary-text-1);
  cursor:pointer;
  animation: landing-sticky-panel-link-fade-in .625s ease-out;
}

h1.landing-sticky-navbar-panel-title {
  font-size: 30px;
  font-weight: 600;
  color: var(--primary-text-1);
  margin:15px 0;
  cursor: pointer;
  transition: padding-left .2s ease-out;
}

h3.landing-sticky-navbar-panel-detail {
  font-size: 20px;
  color: var(--primary-text-2);
  margin:0;
  padding-left: 15px;
  font-weight: normal;
  cursor: pointer;
  margin-block-start: 0.75em;
  margin-block-end: 0.75em;
  transition: color .2s ease-out, padding-left .2s ease-out;
}

a.landing-sticky-navbar-panel-link:hover > h3.landing-sticky-navbar-panel-detail,
a.landing-sticky-navbar-panel-link:focus > h3.landing-sticky-navbar-panel-detail,
a.landing-sticky-navbar-panel-link:hover > h1.landing-sticky-navbar-panel-title,
a.landing-sticky-navbar-panel-link:focus > h1.landing-sticky-navbar-panel-title {
  color: var(--primary-text-1);
  padding-left: 25px;
}

@keyframes landing-sticky-panel-link-fade-in {
  0% { opacity: 0; }
  35% { opacity: 0; margin-left: 25px; }
  100% { opacity: 1; }
}